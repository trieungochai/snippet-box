{{define "title"}}Snippet #{{.Snippet.ID}}{{end}}

{{define "main"}}
    <div class='snippet'>
        <div class='metadata'>
            <strong>{{.Snippet.Title}}</strong>
            <span>#{{.Snippet.ID}}</span>
        </div>
        <pre><code>{{.Snippet.Content}}</code></pre>
        <div class='metadata'>
            <time>Created At: {{.Snippet.CreatedAt}}</time>
            <time>Expires At: {{.Snippet.ExpiresAt}}</time>
        </div>
    </div>
{{end}}
